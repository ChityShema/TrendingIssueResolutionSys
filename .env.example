# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_LOCATION=us-central1

# BigQuery Configuration
BIGQUERY_DATASET=customer_interactions
BIGQUERY_ISSUES_TABLE=issues
BIGQUERY_RESOLUTIONS_TABLE=resolutions

# Firestore Configuration
FIRESTORE_COLLECTION_KB=knowledge_base
FIRESTORE_COLLECTION_RESPONSES=response_history

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-key
NOTIFICATION_EMAIL_FROM=support@yourdomain.com
NOTIFICATION_EMAIL_TEMPLATE=d-template-id

# Firebase Configuration (for UI)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_DASHBOARD_URL=https://your-firebase-app.web.app

# CRM Configuration
CRM_API_URL=https://your-crm-api.com
CRM_API_KEY=your-crm-api-key

# Agent Configuration
TREND_THRESHOLD=10
TIME_WINDOW_MINUTES=60
MAX_INCIDENTS_BEFORE_ESCALATION=50
SEVERITY_ESCALATION_THRESHOLD=high

# Copy as .env file and fill your values below

# Choose 1 for Gemini Vertex AI or 0 Gemini Developer API
GOOGLE_GENAI_USE_VERTEXAI=1

GOOGLE_API_KEY=YOUR_VALUE_HERE #  'Google Gemini Developer API Key, required if GOOGLE_GENAI_USE_VERTEXAI=0.'

# Vertex backend config
GOOGLE_CLOUD_PROJECT=hacker2025-team-98-dev
GOOGLE_CLOUD_LOCATION=us-central1
